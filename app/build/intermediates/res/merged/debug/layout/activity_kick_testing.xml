<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF"
    >
    
<LinearLayout 
 			    android:id="@+id/age_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"                
                >
                <TextView
					android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am a"
                    android:textColor="#000000"
                    />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/less_thirty_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_30_yrs_old"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/thirty_fourty_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30-45 yrs"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/great_fourty_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_45_yrs_old"
                        android:textColor="#000000"
                        />
                </LinearLayout>                
            </LinearLayout>
            
 			<LinearLayout 
 			    android:id="@+id/problems_ll"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="vertical" 			    
 			    >
 			    
 			    <TextView  			       
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content"
 			        android:text="And with the wonderful support of my friends and family I manage my...."
 			        android:textColor="#000000"
 			        />
 			     <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/health_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                 <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/diabetes_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                        
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diabetes"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                 <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/other_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Conditions"
                        android:textColor="#000000"
                        />
                </LinearLayout>              
 			</LinearLayout>
 			
 			<LinearLayout
 			    android:id="@+id/gender_ll"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="vertical" 			    
 			     >
 			    
 			    <TextView 
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content"
 			        android:text="I am"
 			        android:textColor="#000000"
 			        />
 			    
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        >
 			        
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/guy_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Guy"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			         <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/girl_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Girl"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			      
 			    </LinearLayout>
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        >
 			        
 			         <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/dad_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Dad"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/mom_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Mom"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			    </LinearLayout>
 			    
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        >
 			        
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/grandad_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Grandad"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/grand_ma"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Grandma"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			    </LinearLayout>
 			    
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        android:layout_gravity="right"
 			        android:gravity="right"
 			        >
 			        <Button 
 			            android:id="@+id/next_gender_btn"
 			            android:layout_width="wrap_content"
 			            android:layout_height="wrap_content"
 			            android:text="NEXT"
 			            android:layout_marginRight="30dp"
 			            android:background="@android:color/transparent"
 			            android:textColor="#000000"
 			            android:layout_gravity="right"
 			        	android:gravity="right"
 			            />
 			    </LinearLayout>
 			</LinearLayout>
    
</LinearLayout>
