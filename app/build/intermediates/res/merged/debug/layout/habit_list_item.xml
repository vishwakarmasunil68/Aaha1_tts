<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/text_bg_selector" >

    <ImageView
        android:id="@+id/imv_habit_icon"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/habit_custom_icon" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/tv_habit_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink Water"
            android:textColor="#000000" />
        
        <TextView
            android:id="@+id/tv_habit_time"
            android:layout_toRightOf="@id/tv_habit_name"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" 
            android:textSize="14sp"
            android:text="5 min"
            android:textColor="#4da6ff" />

        <TextView
            android:id="@+id/tv_habit_description"
            android:layout_below="@id/tv_habit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="If you are thirsty, you are already dehydrated"
            android:textColor="#D3D3D3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="ADD"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:background="@drawable/red_btn_selector" />

</LinearLayout>