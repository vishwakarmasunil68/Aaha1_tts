<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/journey_all_step_top"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:background="@drawable/journey_status_round_edge_bg"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_events_achieved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="0/5 events achieved"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_events_achieved"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="0% Completed"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" 
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/text_bg_selector">

            <ImageView
                android:id="@+id/imv_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/drink_water_journey" />

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imv_icon1"
                android:text="Drink Water"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_status_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title1"
                android:layout_toRightOf="@id/imv_icon1"
                android:text="Not yet started"
                android:textColor="#088A08" />
            
            <ImageView
                android:id="@+id/imv_step_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:src="@drawable/right_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/text_bg_selector" >

            <ImageView
                android:id="@+id/imv_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/great_breakfast_journey" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imv_icon2"
                android:text="Great BreakFast"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_status_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title2"
                android:layout_toRightOf="@id/imv_icon2"
                android:text="Not yet unlocked"
                android:textColor="#d3d3d3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/text_bg_selector">

            <ImageView
                android:id="@+id/imv_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/dance_journey" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imv_icon3"
                android:text="Dance Your Way"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_status_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title3"
                android:layout_toRightOf="@id/imv_icon3"
                android:text="Not yet unlocked"
                android:textColor="#d3d3d3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/text_bg_selector" >

            <ImageView
                android:id="@+id/imv_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/golden_challenge_journey" />

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imv_icon4"
                android:text="Golden Challenge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_status_step4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title4"
                android:layout_toRightOf="@id/imv_icon4"
                android:text="Not yet unlocked"
                android:textColor="#d3d3d3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/text_bg_selector" >

            <ImageView
                android:id="@+id/imv_icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/secret_letter" />

            <TextView
                android:id="@+id/tv_title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imv_icon5"
                android:text="Secret Letter"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_status_step5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title5"
                android:layout_toRightOf="@id/imv_icon5"
                android:text="Not yet unlocked"
                android:textColor="#d3d3d3" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>