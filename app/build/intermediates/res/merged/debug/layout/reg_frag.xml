<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.motivator.wecareyou.Registration" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
	        android:id="@+id/tv_user_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="@string/what_we_call_you"
	        android:padding="5dp"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	         />
        
	    <EditText
	        android:id="@+id/edt_user_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:hint="@string/enter_ur_name"
	        android:maxLines="1"
	        android:padding="5dp"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	         />
	    <TextView
	        android:id="@+id/tv_enter_user_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:text="@string/can_u_enter_ur_name"
	        android:paddingLeft="5dp"
	        android:gravity="center_vertical"
	        android:textColor="#ff0000"
	        android:visibility="gone"
	         />
	
	    <EditText
	        android:id="@+id/edt_email_id"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:hint="Email id"
	        android:inputType="textEmailAddress"
	        android:maxLines="1" 
	        android:padding="5dp"
	        android:gravity="center_vertical"
	        android:background="#ffffff"
	        android:textColor="#000000"
	        android:visibility="gone"
	         />
	    <TextView
	        android:id="@+id/tv_enter_email"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:text="@string/can_u_enter_ur_name"
	        android:paddingLeft="5dp"
	        android:gravity="center_vertical"
	        android:textColor="#ff0000"
	        android:visibility="gone"
	         />
	
	    <Button
	        android:id="@+id/btn_next"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|bottom"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="30dp"
	        android:background="#ffffff"
	        android:padding="10dp"
	        android:text="NEXT" />
	    
	    <Button
	        android:id="@+id/btn_lets_do_it"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:textColor="#ffffff"
	        android:textStyle="bold"
	        android:background="#ff0000"
	        android:padding="7dp"
	        android:text="LET'S DO IT!"
	        android:visibility="gone"
	         />
	    
	    <LinearLayout 
	        android:id="@+id/ll_social"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="30dp"
	        android:visibility="gone"
	        android:orientation="horizontal">
		    <Button
		        android:id="@+id/btn_google"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:text="Google+"
		        android:background="#ff0000" />
		
		    <Button
		        android:id="@+id/btn_facebook_login"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:layout_marginLeft="20dp"
		        android:layout_gravity="right"
		        android:background="@drawable/fb" />
	    
	    </LinearLayout>
    </LinearLayout>

</ScrollView>