<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/imgNewsImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_started"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4da6ff"
        android:gravity="center"
        android:padding="20dp"
        android:text="Lets Get Started" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_started"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_circle_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/rounded_home_select" />

        <ImageView
            android:id="@+id/img_circle_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/rounded_home_unselect" />

        <ImageView
            android:id="@+id/img_circle_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/rounded_home_unselect" />

        <ImageView
            android:id="@+id/img_circle_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/rounded_home_unselect" />

        <ImageView
            android:id="@+id/img_circle_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/rounded_home_unselect" />

        <ImageView
            android:id="@+id/img_circle_6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/rounded_home_unselect" />
    </LinearLayout>

</RelativeLayout>