<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFF1"
    android:orientation="vertical" >
   <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"              
            android:orientation="vertical"  
            android:weightSum="4"      
            >
        	<LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"    
                android:layout_marginBottom="5dp"
                android:weightSum="4"            
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/walk_icon"   
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"                 
                    />
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Walk"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                
                <EditText 
                    android:id="@+id/walk_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="30 min"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    style="@style/editTextClassic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                
                <Button 
                    android:id="@+id/walk_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/non_selected_care_plan"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                                                         
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"    
                android:layout_marginBottom="5dp"
                android:weightSum="4"            
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/cardio_icon"   
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"                 
                    />
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Cardio"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                
                <EditText 
                    android:id="@+id/Cardio_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="30 min"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    style="@style/editTextClassic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                
                <Button 
                    android:id="@+id/cardio_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/non_selected_care_plan"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                                                         
            </LinearLayout>
           	
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"    
                android:layout_marginBottom="5dp"
                android:weightSum="4"          
                android:layout_weight="1"  
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/yoga_icon"   
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"                 
                    />
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Yoga"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                
                <EditText 
                    android:id="@+id/yoga_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="30 min"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    style="@style/editTextClassic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                
                <Button 
                    android:id="@+id/yoga_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/non_selected_care_plan"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                                                         
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"    
                android:layout_marginBottom="5dp"                 
                android:layout_weight="1"      
                android:layout_gravity="left|center"
                android:gravity="left|center"
                >
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center"
                	android:gravity="left|center"
                    >
                <Button
                    android:id="@+id/skip"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/small_orange_button"
                    android:text="Skip"
                    android:layout_marginLeft="20dp"
                    />
                </LinearLayout>
                
                 <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right|center"
                	android:gravity="right|center"
                    >
                <Button
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/small_green_button"
                    android:text="Done"
                    android:layout_marginRight="20dp"
                    />
                </LinearLayout>
                                                         
            </LinearLayout>
            
        </LinearLayout>
</LinearLayout>
