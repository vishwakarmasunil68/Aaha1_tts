<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.motivator.support.DynamicListView
        android:id="@+id/lv_habit_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
         />

    <LinearLayout
        android:id="@+id/ll_add_first_habit_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_habit"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/recommended_habit"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_add_habit1_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/blue_btn_selector"
            android:padding="10dp"
            android:text="Add Recommended Habit" />
    </LinearLayout>

</LinearLayout>