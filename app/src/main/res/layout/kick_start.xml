<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.motivator.wecareyou.Registration" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_kick_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/lets_start"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tell_us_abt_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/health_goal"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_feel_energized"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawablePadding="5dp"
            android:background="@drawable/ritual1"
            android:drawableRight="@drawable/morning_icon"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:text="Feel more energized"
            android:textColor="#ffffff"
             />

        <TextView
            android:id="@+id/tv_lose_weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawablePadding="5dp"
            android:background="@drawable/ritua2"
            android:drawableRight="@drawable/afternoon_icon"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:text="Lose weight"
            android:textColor="#ffffff"
             />

        <TextView
            android:id="@+id/tv_sleep_better"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawablePadding="5dp"
            android:background="@drawable/ritual3"
            android:drawableRight="@drawable/evening_icon"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="Sleep better"
            android:textColor="#ffffff"
             />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
       		android:paddingLeft="@dimen/activity_horizontal_margin"
        	android:paddingRight="@dimen/activity_horizontal_margin"
        	android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/what_we_call_you"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_ur_name"
                    android:textColor="#000000"
                	android:textColorHint="#dae0e6"
                	android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:padding="5dp"
                     />

                <TextView
                    android:id="@+id/tv_enter_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/can_u_enter_ur_name"
                    android:textColor="#ff0000"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_time_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="when do you wake up?"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time_ques"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="7:30 AM"
                    android:textColor="#4da6ff" />

                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_time1"
                    android:layout_below="@id/tv_time_ques"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="8:00 AM"
                    android:textColor="#dae0e6" />

                <TextView
                    android:id="@+id/tv_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time_ques"
                    android:layout_toRightOf="@id/tv_time2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="8:30 AM" 
                    android:textColor="#dae0e6"/>

                <TextView
                    android:id="@+id/tv_time_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time_ques"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text=". . ."
                    android:textColor="#000000"
                     />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Your email"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:hint="Email id"
                    android:textColor="#000000"
                	android:textColorHint="#dae0e6"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                     />

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="#4da6ff"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="NEXT"
                android:textColor="#000000" 
                android:background="#ffffff"/>
			<LinearLayout 
 			    android:id="@+id/age_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
					android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am a"
                    android:textColor="#000000"
                    />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/less_thirty_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_30_yrs_old"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/thirty_fourty_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30-45 yrs"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/great_fourty_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_45_yrs_old"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    
                </LinearLayout>
            </LinearLayout>             		
 			
 			<LinearLayout
 			    android:id="@+id/gender_ll"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="vertical"
 			    android:visibility="gone"
 			     > 			     			  
 			    
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        >
 			        
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/guy_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Guy"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			         <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/girl_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Girl"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			      
 			    </LinearLayout>
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        >
 			        
 			         <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/dad_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Dad"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/mom_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Mom"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			    </LinearLayout>
 			    
 			    <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        >
 			        
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/grandad_check"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Grandad"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			        <LinearLayout 
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="horizontal"
 			            android:layout_weight="1"
 			            >
 			            
 			            <RadioButton 
 			                android:id="@+id/grand_ma"
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content" 			                
 			                />
 			            <TextView 
 			                android:layout_width="wrap_content"
 			                android:layout_height="wrap_content"
 			                android:text="Grandma"
 			                android:textColor="#000000"
 			                />
 			        </LinearLayout>
 			    </LinearLayout>
 			    
 			    
 			</LinearLayout>
 			<LinearLayout 
 			    android:id="@+id/problems_ll"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="vertical"
 			    android:visibility="gone"
 			    >
 			    
 			    <TextView  			       
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content"
 			        android:text="And with the wonderful support of my friends and family I manage my...."
 			        android:textColor="#000000"
 			        />
 			     <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/health_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                 <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/diabetes_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                        
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diabetes"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                 <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    
                    <RadioButton 
                        android:id="@+id/other_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Conditions"
                        android:textColor="#000000"
                        />
                </LinearLayout>  
                <LinearLayout 
 			        android:layout_width="match_parent"
 			        android:layout_height="wrap_content"
 			        android:orientation="horizontal"
 			        android:layout_gravity="right"
 			        android:gravity="right"
 			        >
 			        <Button 
 			            android:id="@+id/next_gender_btn"
 			            android:layout_width="wrap_content"
 			            android:layout_height="wrap_content"
 			            android:text="NEXT"
 			            android:layout_marginRight="30dp"
 			            android:background="@android:color/transparent"
 			            android:textColor="#000000"
 			            android:layout_gravity="right"
 			        	android:gravity="right"
 			            />
 			    </LinearLayout>            
 			</LinearLayout>
            <LinearLayout
                android:id="@+id/ll_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btn_google"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginRight="5dp"
                    android:layout_height="45dp"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_facebook_login"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginLeft="5dp"
                    android:layout_height="45dp"
                    android:background="@drawable/face" />
            </LinearLayout>

            <View
                android:id="@+id/view_separater"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="15dp"
                android:background="#dae0e6"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btn_lets_do_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/lets_get_started"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>