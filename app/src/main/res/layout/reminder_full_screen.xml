<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feel_energized_bg"
    android:orientation="vertical"
    android:id="@+id/ll_reminder_bg" >

    <ImageView 
        android:id="@+id/imv_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/cross_icon"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:id="@+id/ll_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reminder_morning"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/rll_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:background="@drawable/reminder_title"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_reminder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="time for your Ritual"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_reminder_snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_reminder_title"
            android:layout_marginLeft="25dp"
            android:drawableTop="@drawable/snooze"
            android:gravity="center"
            android:padding="10dp"
            android:text="snooze"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imv_reminder_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_reminder_title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/play_button" />

        <TextView
            android:id="@+id/tv_reminder_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_reminder_title"
            android:layout_marginRight="25dp"
            android:drawableTop="@drawable/list_reminder"
            android:gravity="center"
            android:padding="10dp"
            android:text="list"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rll_snooze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/reminder_title"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_snooze1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/day_bg1"
            android:gravity="center"
            android:padding="5dp"
            android:text="5 Min"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_snooze2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/day_bg1"
            android:gravity="center"
            android:padding="5dp"
            android:text="10 Min"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_snooze3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/day_bg1"
            android:gravity="center"
            android:padding="5dp"
            android:text="15 Min"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>